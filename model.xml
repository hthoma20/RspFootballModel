

<model>
    <Enum name="RspChoice">
        <member>ROCK</member>
        <member>PAPER</member>
        <member>SCISSORS</member>
    </Enum>

    <Enum name="Player">
        <member>home</member>
        <member>away</member>
    </Enum>

    <Struct name="Game">
        <member>
            <name>gameId</name>
            <type><string/></type>
        </member>
        <member>
            <name>version</name>
            <type><int/></type>
        </member>
    </Struct>

    <TaggedUnion name="Action" tagKey="name">
        <Struct name="RspAction" tag="RSP">
            <member>
                <name>choice</name>
                <type>RspChoice</type>
            </member>
        </Struct>
    </TaggedUnion>

    <Result name="RspResult" tag="RSP">
        <member>
            <name>home</name>
            <type>RspChoice</type>
        </member>
        <member>
            <name>away</name>
            <type>RspChoice</type>
        </member>
    </Result>

    <Result name="RollResult" tag="ROLL">
        <member>
            <name>player</name>
            <type>Player</type>
        </member>
        <member>
            <name>roll</name>
            <type> <list><int/></list> </type>
        </member>

    </Result>

</model>